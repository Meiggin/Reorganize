			var arr = ["red", "blue", "yellow", "green", "black", "orange", "white"];
			var i = 0;
						setInterval(function(){
							if(i===6){
								i = 0;
							}
							document.querySelector("div").style.backgroundColor = arr[i]
							i++
						},100)
			var x = 1;
			
			var span = document.getElementById("span");
			
			setInterval(function() {
				console.log(x)
				span.style.fontSize = Math.abs(x*10)+"px"
				if(x===6){
					x = x*-1-1;
				}else if(x===-1){
				    x = x*-1-1;
				}
				x++

			},1000);
